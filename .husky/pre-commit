#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

FILES=$(git diff --cached --diff-filter=d --name-only | grep '^src/.*.php$' | tr '\n' ' ')

echo "$FILES"

if [ -n "$FILES" ]; then
  echo "** Cleanup **"
  # shellcheck disable=SC2086
  composer format $FILES
  # shellcheck disable=SC2086
  composer lint $FILES
fi
